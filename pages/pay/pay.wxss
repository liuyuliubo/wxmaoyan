  margin-right: 15rpx;
  border: 1rpx solid black
}
.pay_effect{
  margin-left: 15rpx;

}
.pay_name{
    font-size: 30rpx;

}
/*票价  */
.pay_pay{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
