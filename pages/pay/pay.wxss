  height: 100rpx ;
  line-height: 100rpx;

}
.pay_movies{
  padding: 25rpx 0rpx;
  margin-left: 25rpx;
  border-bottom: 1rpx solid gainsboro
}
.pay_piao{
    color: red

}
.pay_piao,.pay_page{
  display: flex;
